<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".registrationpage"
    android:padding="15dp"
    tools:ignore="hardCodedText">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
                android:layout_gravity="center"
                android:layout_margin=".2in"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/first_name"
                android:textSize="20sp"
                android:padding="5dp"
                android:textColor="#FFFFFF"/>

            <EditText
                android:id="@+id/reg_etFname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ex: Juan"
                android:background="@drawable/border_style"
                android:textSize="20sp"
                android:padding="15dp"
                android:layout_marginBottom="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/last_name"
                android:textSize="20sp"
                android:padding="5dp"
                android:textColor="#FFFFFF"/>

            <EditText
                android:id="@+id/reg_etLname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ex: Dela Cruz"
                android:background="@drawable/border_style"
                android:textSize="20sp"
                android:padding="15dp"
                android:layout_marginBottom="15dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_address"
                android:textSize="20sp"
                android:padding="5dp"
                android:textColor="#FFFFFF"/>

            <EditText
                android:id="@+id/reg_etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ex_juandelacruz_gmail_com"
                android:background="@drawable/border_style"
                android:textSize="20sp"
                android:padding="15dp"
                android:layout_marginBottom="15dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textSize="20sp"
                android:padding="5dp"
                android:textColor="#FFFFFF"/>

            <EditText
                android:id="@+id/reg_etPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Must contain at least 8 characters."
                android:background="@drawable/border_style"
                android:textSize="20sp"
                android:padding="15dp"
                android:layout_marginBottom="15dp" />





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirm_password"
                android:textSize="20sp"
                android:padding="5dp"
                android:textColor="#FFFFFF"/>

            <EditText
                android:id="@+id/reg_etConPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Must contain at least 6 characters."
                android:background="@drawable/border_style"
                android:textSize="20sp"
                android:padding="15dp"
                android:layout_marginBottom="15dp" />


            <Button
                android:id="@+id/reg_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/register"
                android:background="@drawable/reg_btn"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="15dp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>